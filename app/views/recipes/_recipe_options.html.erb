<table>
  <tr>
    <td width="30%"><p><%= link_to 'Add A Recipe', new_recipe_path %></p></td>
    <td>
      <%= form_for RecipeIngredient.new, url: filter_recipes_path do |f| %>
        Filter By<br>
        <%= f.label :ingredient %>
        <%= f.select :ingredient, Ingredient.all.collect { |i| [ i.name, i.id ] }, include_blank: true, selected: session[:ingredient_filter].to_i %>
        <%= f.submit 'Filter' %>
      <%end%>
      <br>
    </td>
  </tr>
</table>
