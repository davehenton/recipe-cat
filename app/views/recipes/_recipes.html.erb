<%= render partial: 'recipes/recipe_options' if user_signed_in? %>

<% recipes.each do |recipe| %>
  <div class='row'>
    <div class='col-md-12'>
      <table class='vspace-5'>
        <tr>
          <td width='25%'>
            <%= link_to recipe.name, recipe %>
          </td>
          <td width='25%' align='center'>
            <a href="/recipes/<%=recipe.id%>" data-recipe-id="<%=recipe.id%>"><img src="<%= asset_path(recipe.photo_path) %>"  height='100' width='190' title="<%=recipe.name%> photo"></a>
          </td>
          <td width='25%' align='center'>
            <%= pluralize(recipe.number_of_reviews, 'review') %><br>
            <%= render partial: 'recipes/review_stars', locals: {stars: recipe.average_stars} %>
          </td>
          <td width='25%'>
            <%= render partial: 'recipes/favorite', locals: {recipe: recipe} %>
          </td>
        </tr>
      </table>
    </div>
  </div>
<% end %>
