<!DOCTYPE html>
<html>
  <head>
    <title>Recipe Cat</title>
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <p><%= link_to "Home", root_path %>  |
         <%= link_to "Recipes", recipes_path %>  |
         <%= link_to "My Favorites", user_user_recipe_favorites_path(current_user) if user_signed_in? %>  |
         <%= link_to "My Reviews", user_user_recipe_reviews_path(current_user) if user_signed_in?%>  |
         <%= link_to "Ingredients", ingredients_path %>  |
         <%= link_to "About", about_path %>
       </p>
    </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    <footer>
      <p><%= link_to "Log out", destroy_user_session_path, method: :delete %></p>
    </footer>
  </body>
</html>
