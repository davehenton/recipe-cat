<div class='row'>
  <div class="col-sm-2">
    <em><u><%= review.title %></u></em>
  </div>
  <div class="col-sm-1">
    <%= render partial: "recipes/review_stars", locals: {stars: review.stars, url: nil} %>
  </div>
  <div class="col-sm-1">
    <%= link_to(image_tag('edit-icon.png',   size:'16', title: 'Edit review'),   '#', class:'js-editReview')   if policy(review).update? %>
    <%= link_to(image_tag('delete-icon.png', size:'16', title: 'Delete review'), '#', class:'js-deleteReview') if policy(review).destroy? %>
  </div>
</div>
<div class='row'>
  <div class="col-sm-4">
    <%= review.comments %>
  </div>
</div>
<p></p>
<div class='row'>
  <div class="col-sm-4">
    <p>by <%= review.author_name %> / <%= review.created_at %></p>
  </div>
</div>
