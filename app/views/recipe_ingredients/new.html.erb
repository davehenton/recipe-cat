<h2>Add Recipe Ingredient to <%= @recipe_name %></h2>
<%= form_for @recipe_ingredient, url: recipe_recipe_ingredients_path(@recipe_ingredient.recipe) do |f| %>
  <%= f.label :ingredient %>
  <%= f.select :ingredient, Ingredient.all.collect { |i| [ i.name, i.id ] }, include_blank: true, selected: session[:ingredient_filter].to_i %>
  <%= f.label :quantity %>
  <%= f.number_field :quantity %>
  <%= f.label :unit %>
  <%= f.select :unit, Unit.all.collect { |i| [ i.name, i.id ] }, include_blank: true %>
  <%= f.submit "Add" %>
<% end %>
